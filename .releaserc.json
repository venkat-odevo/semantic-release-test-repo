{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "mvn -f my-app/pom.xml versions:set -DnewVersion=${nextRelease.version} -DgenerateBackupPoms=false && mvn -f my-app/pom.xml versions:commit",
        "publishCmd": "mvn -B deploy -f my-app/pom.xml -DskipTests=true"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["my-app/pom.xml", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "my-app/target/my-app-*.jar", "label": "project deployment package" }
        ]
      }
    ]
  ]
}